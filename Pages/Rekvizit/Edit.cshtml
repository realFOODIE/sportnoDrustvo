@page
@model sportnoDrustvo.Pages.Rekviziti.EditModel

<h2>Uredi Rekvizit</h2>

<form method="post">
    <input type="hidden" asp-for="Rekvizit.Id" />
    <div class="form-group">
        <label asp-for="Rekvizit.Ime" class="control-label"></label>
        <input asp-for="Rekvizit.Ime" class="form-control" />
        <span asp-validation-for="Rekvizit.Ime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rekvizit.JeNaVoljo" class="control-label"></label>
        <input asp-for="Rekvizit.JeNaVoljo" class="form-check-input" />
        <span asp-validation-for="Rekvizit.JeNaVoljo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Shrani Spremembe</button>
    <a asp-page="./Index" class="btn btn-secondary">Prekliči</a>
</form>
