@page
@model sportnoDrustvo.Pages.Rezervacije.EditModel

<h2>Uredi Rezervacijo</h2>

<form method="post">
    <input type="hidden" asp-for="Rezervacija.Id" />
    <div class="form-group">
        <label asp-for="Rezervacija.TerminId" class="control-label"></label>
        <select asp-for="Rezervacija.TerminId" class="form-control" asp-items="ViewBag.TerminId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Rezervacija.ClanId" class="control-label"></label>
        <select asp-for="Rezervacija.ClanId" class="form-control" asp-items="ViewBag.ClanId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Rezervacija.DatumRezervacije" class="control-label"></label>
        <input asp-for="Rezervacija.DatumRezervacije" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">Shrani Spremembe</button>
    <a asp-page="./Index" class="btn btn-secondary">Prekliči</a>
</form>
