@page
@model sportnoDrustvo.Pages.Termini.CreateModel

<h2>Dodaj Nov Termin</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Termin.ImeEkipe" class="control-label"></label>
        <input asp-for="Termin.ImeEkipe" class="form-control" />
        <span asp-validation-for="Termin.ImeEkipe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Termin.DatumTermina" class="control-label"></label>
        <input asp-for="Termin.DatumTermina" class="form-control" type="datetime-local" />
        <span asp-validation-for="Termin.DatumTermina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Termin.MaxUdelezencev" class="control-label"></label>
        <input asp-for="Termin.MaxUdelezencev" class="form-control" type="number" />
        <span asp-validation-for="Termin.MaxUdelezencev" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Shrani</button>
    <a asp-page="./Index" class="btn btn-secondary">Prekliči</a>
</form>
